@model SitePet.Mvc.ViewModels.PetViewModel

@{
    ViewData["Title"] = "Deletar Pet";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que deseja deletar esse Pet?</h3>
<div class="row">
    <div class="col-md-4">
        <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style="width: 380px; height: 328px; border:3px solid blue" />
    </div>

    <div class="col-md-6">
        <dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Raca)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Raca)
            </dd>

            @if (Model.Tipo == 1)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Tipo)
                </dt>
                <dd class="col-sm-10">
                    @Tipo.Gato
                </dd>
            }
            else if (Model.Tipo == 2)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Tipo)
                </dt>
                <dd class="col-sm-10">
                    @Tipo.Cachorro
                </dd>
            }

            @if (Model.Genero == 1)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Genero)
                </dt>
                <dd class="col-sm-10">
                    @Genero.Femea
                </dd>
            }
            else if (Model.Genero == 2)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Genero)
                </dt>
                <dd class="col-sm-10">
                    @Genero.Macho
                </dd>
            }



        </dl>
        <div class="ml-2">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-info" asp-action="Index">Voltar</a>
            </form>
        </div>


    </div>

</div>
